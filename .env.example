# Configuration générale
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Configuration Ollama
OLLAMA_HOST=http://localhost:11434
OLLAMA_TIMEOUT=300
OLLAMA_KEEP_ALIVE=10m

# Configuration Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL_SFD=3600
REDIS_TTL_TESTS=3600
REDIS_TTL_OCR=3600
REDIS_TTL_MODEL=3600

# Configuration des services
OCR_SERVICE_HOST=localhost
OCR_SERVICE_PORT=8001
OCR_SERVICE_TIMEOUT=30

ALM_SERVICE_HOST=localhost
ALM_SERVICE_PORT=8002
ALM_SERVICE_TIMEOUT=30
ALM_API_URL=
ALM_API_KEY=

EXCEL_SERVICE_HOST=localhost
EXCEL_SERVICE_PORT=8003
EXCEL_SERVICE_TIMEOUT=30

PLAYWRIGHT_SERVICE_HOST=localhost
PLAYWRIGHT_SERVICE_PORT=8004
PLAYWRIGHT_SERVICE_TIMEOUT=30
PLAYWRIGHT_WORKERS=4
PLAYWRIGHT_BROWSER=chromium
PLAYWRIGHT_HEADED=false
PLAYWRIGHT_SCREENSHOT_ON_FAILURE=true
PLAYWRIGHT_VIDEO_ON_FAILURE=true

# Configuration JWT
JWT_SECRET_KEY=secret
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# Configuration des limites de taux
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Configuration des répertoires
DATA_DIR=./data
MODELS_DIR=./models
LOGS_DIR=./logs
REPORTS_DIR=./reports
TEMP_DIR=./temp
CACHE_DIR=./cache

# Configuration des pipelines
PIPELINE_MAX_PARALLEL_TESTS=10
PIPELINE_MAX_PARALLEL_SCENARIOS=10
PIPELINE_FALLBACK_ENABLED=true
PIPELINE_RETRY_MAX_ATTEMPTS=3
PIPELINE_RETRY_BACKOFF_FACTOR=0.5

# Configuration Prometheus
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=8000

# Configuration Dash
DASH_ENABLED=false
DASH_PORT=8050

# Configuration Docker
COMPOSE_PROJECT_NAME=altiora
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# Limites de mémoire et CPU
OLLAMA_MEMORY_LIMIT=2g
OLLAMA_CPU_LIMIT=2
REDIS_MEMORY_LIMIT=256m
OCR_MEMORY_LIMIT=512m

# Configuration des services mock
MOCK_OCR_SERVICE=false
MOCK_ALM_SERVICE=false

# Utilisation des modèles locaux
USE_LOCAL_MODELS=false